                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" for="Name">Họ Tên</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Number, new { @class = "col-md-2 control-label" })
